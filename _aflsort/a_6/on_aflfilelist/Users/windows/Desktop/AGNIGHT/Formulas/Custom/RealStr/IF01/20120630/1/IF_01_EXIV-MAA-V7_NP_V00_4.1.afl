cond_maa=(MAA0 +MAA1 +MAA2 +MAA3+MAA4+MAA5+MAA6+MAA7 )/8;


V70=v7min(15,110,2,"IF");
V71=V7DYStartVer(1,107,"IF");
V72=v7min(14,114,2,"IF");
