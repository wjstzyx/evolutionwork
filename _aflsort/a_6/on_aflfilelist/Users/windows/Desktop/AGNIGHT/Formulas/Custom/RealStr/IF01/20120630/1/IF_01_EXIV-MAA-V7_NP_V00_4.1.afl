cond_exiv=(EXIV0+EXIV1+EXIV2+EXIV3+EXIV4+EXIV5+EXIV6+EXIV7)/8;


MAA0=MAArrangeRoll(26,8,1,1000,1000,"IF");
MAA1=MAArrangeRoll(24,10,0,1000,1000,"IF");
MAA2=MAArrangeRoll(27,12,0,1000,1000,"IF");
